@model ShiftManagement.Web.Models.Turn

@{
    ViewData["Title"] = "Edit Turn";
}

<h2>Edit Turn</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Number" class="control-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateHour" class="control-label"></label>
        <input asp-for="DateHour" type="datetime-local" class="form-control" />
        <span asp-validation-for="DateHour" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Attend" class="form-check-input" />
        <label asp-for="Attend" class="form-check-label">Attended</label>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}